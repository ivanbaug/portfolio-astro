---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Intro from '../components/Intro.astro';
import Section from '../layouts/Section.astro';
import Projects from '../components/Projects.astro';
import Experience from '../components/Experience.astro';
import Education from '../components/Education.astro';
import Contact from '../components/Contact.astro';

import type { PortfolioData } from '../types/portfolio';
import cvData from '../data/cv_data.json';

const data: PortfolioData = cvData;
---

<Layout title="ivan's portfolio">
	<Navbar />
	<main>
		<Intro></Intro>
		<Section title="My projects" idSection='projects' altColor>
			<Projects projects={data.projects} />
		</Section>
		<Section title="Experience" idSection='experience'>
			<Experience experience={data.experience} />
		</Section>
		<Section title="Education" idSection='education' altColor>
			<Education education={data.education} courses={data.courses} />
		</Section>
		<Section title="Contact" idSection='contact'>
			<Contact />
		</Section>
	</main>
</Layout>
